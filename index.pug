doctype html
html(lang="ja")
  head
    title 桃星愛花ファンサイト
    //-meta
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="format-detection" content="telephone=no")
